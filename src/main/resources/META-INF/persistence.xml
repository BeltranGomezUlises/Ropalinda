<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="ropalinda" transaction-type="RESOURCE_LOCAL">
    <class>com.ub.ropalinda.entities.ProspectiveCustomer</class>
    <class>com.ub.ropalinda.entities.Customer</class>
    <class>com.ub.ropalinda.entities.Employee</class>
    <class>com.ub.ropalinda.entities.CompatibleGarment</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <!-- jdbc -->
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/ropalinda"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.password" value="2424"/>
    </properties>
  </persistence-unit>
</persistence>
